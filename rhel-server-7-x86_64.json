{
  "variables": {
    "vmware_password": "",
    "submgr_pass": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
	"scripts/redhat-vmware-tools_install.sh",
        "scripts/redhat-vmware-cleanup.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img inst.stage2=hd:LABEL=RHEL-7.2\\x20Server.x86_64 rd.live.check quiet ",
	"ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
	"submgr_pass={{ user `submgr_pass` }}",
	"<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "rhel7-64",
      "headless": true,
      "http_directory": "http",
      "iso_url": "/Users/reesek/Downloads/redhat/rhel-server-7.2-x86_64-dvd.iso",
      "iso_checksum": "51e013512f489203a923a716b408fbdf",
      "iso_checksum_type": "none",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "skip_compaction": false,
      "output_directory": "redhat7_template",
      "remote_type": "esx5",
      "remote_host": "192.168.1.2",
      "remote_username": "root",
      "remote_password": "{{user `vmware_password`}}",
      "remote_datastore": "vmstore02_lun",
      "remote_cache_datastore": "isostore",
      "remote_cache_directory": "redhat",
      "keep_registered": "true",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "/tmp/vmware_tools_{{.Flavor}}.iso",
      "vm_name": "redhat7",
      "vmx_data": {
        "ethernet0.networkName": "VM Network",
        "ethernet0.present": "TRUE",
        "ethernet0.virtualDev": "vmxnet3",
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1",
        "scsi0:0.fileName": "disk.vmdk",
        "scsi0:0.present": "TRUE",
        "scsi0:0.redo": ""
      }
    }
  ]
}
